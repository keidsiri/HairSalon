@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>All Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No Clients have been added yet!</h3>
  <h4>Please add the stylist first then add the client</h4>
} 

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Stylist.Name</li>
}

<p>@Html.ActionLink("Add new client", "Create")</p>
<p>@Html.ActionLink("Return to stylists", "Index", "Stylists")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>